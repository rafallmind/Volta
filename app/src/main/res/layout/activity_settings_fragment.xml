<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SettingsFragment"
    android:background="@color/orange2">

    <TextView
        android:id="@+id/textsettinggs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textsettings"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/eng"
        android:layout_below="@+id/textsettinggs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iceng"
        android:layout_toRightOf="@+id/fr"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/fr"
        android:layout_width="80dp"
        android:layout_below="@+id/textsettinggs"
        android:layout_height="80dp"
        android:src="@drawable/icfr"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fr"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"

        android:background="@drawable/btncustomsignup"
        android:text="@string/disconnect"
        android:textColor="@color/lightorange"
        android:textStyle="bold" />
</RelativeLayout>